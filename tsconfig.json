{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "outDir": "./dist/",
    "noEmit": true,
    "strict": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "rootDir": "./src",
    "baseUrl": "./src"
  },
  "include": ["index.d.ts", "./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules"]
}
